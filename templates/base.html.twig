<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %} :: Shortener{% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

        <style>
            body {
                background-color: white !important;
            }
            .container {
            }
            #content {
                padding: 10px;
                text-align: left !important;
                border-top: 1px dotted black;
                margin-right: 50px;
            }
            .sidebar {
                background: #e97451;
                padding: 0;
                min-height: 850px;
            }
            .plate {
                padding: 10px;
                border: 1px solid orangered;
                border-radius: 4px;
                max-width: 300px;
                margin-left: 0;
            }
            .logo {
                width: 40px;
                margin: 20px auto;
                display: block;
            }
            .avatar {
                width: 60px;
            }
            header .row {
                background: #e97451;
                border-top-left-radius: 8px;
                border-bottom-right-radius: 8px;
            }
            #bread-crumbs {
                font-size: 13px;
                margin: 10px 0;
                text-align: left;
            }
            .profileBtn {
                margin: 20px 10px 0;
                color: #fff;
                text-decoration: none;
            }
            .profileBtn a {
                text-decoration: none;
                color: #fff;
            }
            .profileBtn a:hover {
                color: #b9bcbe;
            }
            .nav {
                display: block;
            }
            .nav li {
                border-bottom: 1px solid #b9bcbe;
            }
            .nav li.first {
                border-top: 1px solid #b9bcbe;
            }
            .nav a {
                color: #fff;
            }
            .nav a:hover {
                color: #b9bcbe;
            }
            .nav li:hover {
                background: #6c757d;
            }
            .text-center {
                text-align: center;
            }
            .text-right{
                text-align: right;
            }
            #copyright {
                font-size: 12px;
            }
            li.current {
                border-right: 5px solid #fff;
                box-shadow: 1px 1px 8px rgba(0, 0, 0, 0.4) inset;
            }
            {% block stylesheets %} {% endblock %}
        </style>
    </head>
    <body>
        {% block body %}
            <header><div class="container">
                    <div class="row">
                        <div class="col-2">
                            <a href="{{ path('app_main') }}">
                                <img class="logo" src="https://seeklogo.com/images/L/logo-com-hr-logo-5636A4D2D5-seeklogo.com.png"
                                     alt="logo">
                            </a>
                        </div>
                        <div class="col">
                            {% block header %}{% endblock %}
                        </div>
                        <div class="col-2 text-right">
                            {{ include('login/login_button.html.twig') }}
                        </div>

                    </div>
                </div>
            </header>
            <div class="container text-center">
                <div class="row">
                    <div class="col-2 sidebar">
                        {{ include('mainmenu.html.twig') }}
                        {% block sidebar %}{% endblock %}
                    </div>
                    <div class="col">
                        <section id="bread-crumbs">
                            <a href="{{ path('app_main') }}">Home page</a>
                            {% if app.current_route != 'app_main' %}
                                -> {% block page_name %}{% endblock %}
                            {% endif %}
                            </section>
                        <section id="content">{% block content %}{% endblock %}</section>
                    </div>
                </div>
            </div>
            <section id="footer">
                <div class="container">
                    <div class="row">
                        <div class="col-2">
                        </div>
                        <div class="col">
                            {% block footer %}{% endblock %}
                            <div id="copyright" class="text-center">Url Shortener © 2024</div>
                        </div>
                        <div class="col-2">
                        </div>
                    </div>
                </div>
            </section>
        {% endblock %}
        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </body>
</html>
